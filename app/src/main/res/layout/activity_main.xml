<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/main_container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize">

        <ImageView
                android:id="@+id/toolbar_logo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/ic_launcher_round"/>

        <TextView
                android:id="@+id/tv_title_visit_plan"
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="139dp">

        <RelativeLayout
                android:id="@+id/rl_docdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false">

            <TextView
                    android:id="@+id/tv_datedoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/my_location"
                    android:textColor="@color/cardview_dark_background"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="20dp"
                    android:layout_marginStart="8dp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/tv_latitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="14dp"
                    android:hint = "53.9"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_marginTop="35dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="11dp"/>

            <TextView
                    android:id="@+id/tv_longitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="14dp"
                    android:hint = "27.56667"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_marginTop="71dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="13dp"/>

            <TextView
                    android:id="@+id/tv_adress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="14dp"
                    android:hint = "Красноармейская 6, Минск, 220030"
                    android:layout_marginTop="103dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="13dp"/>


            <ImageView
                    android:id="@+id/btn_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:minWidth="48dp"
                    android:clickable="true"
                    android:padding="20dp"
                    android:scaleType="center"
                    android:onClick="onClick"
                    android:src="@drawable/ic_add_location"
                    android:layout_alignRight="@+id/tv_datedoc"
                    android:layout_marginRight="-9dp"
                    android:layout_marginEnd="-9dp"
                    android:layout_alignEnd="@+id/tv_datedoc"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="390dp">

        <RelativeLayout
                android:id="@+id/rl_doc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false">

            <FrameLayout
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="900dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp">
            </FrameLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp">

        <RelativeLayout
                android:id="@+id/rl_doc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false">

            <Button
                    android:id="@+id/btn_route"
                    android:text="@string/build_route"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_alignParentStart="true"
                    android:layout_marginLeft="0dp" android:layout_marginStart="0dp"
                    android:layout_alignParentLeft="true" android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" android:layout_marginRight="0dp"
                    android:layout_marginEnd="0dp"/>
            <Button
                    android:id="@+id/btn_route2"
                    android:text="test"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:layout_marginLeft="-139dp" android:layout_alignRight="@+id/btn_route"
                    android:layout_marginRight="39dp" android:layout_marginEnd="39dp"
                    android:layout_alignEnd="@+id/btn_route" android:layout_alignTop="@+id/btn_route"
                    android:layout_marginTop="0dp" android:layout_marginBottom="0dp"
                    android:layout_alignBottom="@+id/btn_route" android:layout_toEndOf="@+id/btn_route"
                    android:layout_toRightOf="@+id/btn_route" android:layout_marginStart="-139dp"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
